{
  "manifest_version": 3,
  "name": "XPostsFinder",
  "version": "1.0.0",
  "description": "XPostsFinder - Smarter Conversations on X (Twitter)",
  "permissions": [
    "activeTab",
    "storage",
    "bookmarks",
    "scripting"
  ],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*",
    "http://localhost:1234/*",
    "http://127.0.0.1:1234/*",
    "https://api.openai.com/*"
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png",
    "512": "icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "XPostsFinder",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*", "https://twitter.com/*"],
      "js": ["content.js"],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
